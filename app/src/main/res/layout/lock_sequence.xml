<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/black">

    <!--<android.support.v7.widget.RecyclerView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/lock_sequence_recycler"-->
        <!--android:layout_marginBottom="@dimen/dimen_20">-->

    <!--</android.support.v7.widget.RecyclerView>-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_distress_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_20"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/back_black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView111"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="Combinations for Lock"
                android:textColor="@color/hint_color"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/combination_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:singleLine="true"
                android:text="Key Combinations"
                android:layout_marginRight="@dimen/dimen_10"
                android:textColor="@color/hint_color"
                android:layout_marginLeft="25dp"
                android:paddingTop="5dp"
                android:layout_marginBottom="-15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-15dp"
                android:layout_marginLeft="@dimen/dimen_10"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20"
                    android:layout_marginRight="@dimen/dimen_20"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_weight="1.8"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/lin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_50"
                            android:orientation="horizontal"
                            android:paddingRight="@dimen/dimen_20">

                        </LinearLayout>

                    </HorizontalScrollView>



                </LinearLayout>


                <ImageButton
                    android:id="@+id/distress_combination_keys_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_weight="0.2"
                    android:background="@color/back_black"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_launcher_background" />
            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>